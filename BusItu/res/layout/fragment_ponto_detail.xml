<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.tcc.busitu.PontoDetail$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnLocalizacao"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:src="@drawable/ic_geolocation_busstop"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtNomePonto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:layout_gravity="left|center_vertical"
            android:padding="2dp"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
		android:layout_marginLeft="7dp"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:gravity="top|center"
        android:text="Exibir no mapa"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:text="Linhas atendidas:"
        android:textSize="12sp" />

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5e5e5"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:drawSelectorOnTop="true"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" />

</LinearLayout>